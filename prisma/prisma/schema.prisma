generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("locked-in.cx4uccioczna.us-east-1.rds.amazonaws.com:3306")
}

model User {
  User_ID     Int       @id @default(autoincrement())
  Username    String    @unique
  Userpass    String
  Folders     PasswordFolder[]
  Passwords   Password[]
}

model PasswordFolder {
  Folder_ID   Int       @id
  FolderName  String
  user        User      @relation(fields: User_ID, references: User_ID)
  User_ID     Int
  Passwords   Password[]     
}

model Password {
  Pass_ID    Int        @id
  Folder     PasswordFolder  @relation(fields: Folder_ID, references: Folder_ID)
  Folder_ID  Int
  user       User       @relation(fields: User_ID, references: User_ID)
  User_ID    Int
  PassHash   String
  Website    String
  PassDesc   String
}
